@model SG_ASP_1.Models.EnfermeriaViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Crear</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Enfermería</h4>
    <hr />

    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.AtenId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AtenId, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AtenId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        <dl class="dl-horizontal">

            <dt>@Html.DisplayNameFor(model => model.DocIde)</dt>
            <dd>@Html.DisplayFor(model => model.DocIde)</dd>

            <dt>@Html.DisplayNameFor(model => model.NomApe)</dt>
            <dd>@Html.DisplayFor(model => model.NomApe)</dd>

            <dt>@Html.DisplayNameFor(model => model.Empres)</dt>
            <dd>@Html.DisplayFor(model => model.Empres)</dd>
        </dl>
    </div>
    <hr />
    <div>
        <h4>Interconsultas</h4>
        <table class="tabe table-striped">
            <tr class="table info">
                <th>Id</th>
                <th>Interconsulta</th>
                <th>Fecha de envio</th>
                <th>Personal que envió el correo</th>
                <th>Envio de hoja informativa</th>
                <th>Fecha de comicación al paciente</th>
                <th>Personal que comunicó al paciente</th>
                <th>Fecha de levantamiento de observaciones</th>
            </tr>

            @for (int i = 0; i < Model.interconsultas.Count; i++)
            {
                <tr>
                    <td>@Html.EditorFor(m => Model.interconsultas[i].Id, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                    <td>@Html.EditorFor(m => Model.interconsultas[i].IntCon, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                    <td>@Html.EditorFor(m => Model.interconsultas[i].FecEnv, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                    <td>@Html.EditorFor(m => Model.interconsultas[i].PeEnCo, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                    <td>@Html.EditorFor(m => Model.interconsultas[i].EnHoIn, new { htmlAttributes = new { @class = "form-control"} })</td>
                    <td>@Html.EditorFor(m => Model.interconsultas[i].FeCoPa, new { htmlAttributes = new { @class = "form-control" } })</td>
                    <td>@Html.EditorFor(m => Model.interconsultas[i].PeCoPa, new { htmlAttributes = new { @class = "form-control" } })</td>
                    <td>@Html.EditorFor(m => Model.interconsultas[i].FeLeObs, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
            }
        </table>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Atenciones", "Atenciones")
</div>
